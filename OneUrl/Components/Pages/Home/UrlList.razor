@rendermode InteractiveServer
@inject IHttpClientFactory ClientFactory
@using System.Text.Json
@using Blazicons

<table>
    <tr class="head">
        <th>Target</th>
        <th>Location</th>
    </tr>
    @if (records == null)
    {
        <div class="loading">Loading...</div>
    }
    else
    {
        @foreach(Record record in records)
        {
            <tr class="child">
                <td>@record.Target</td>
                <td>@record.Location</td>
                <button class="btn btn-secondary">
                    <Blazicon Svg="Lucide.SquareArrowOutUpRight"/>
                </button>
                <button class="btn btn-danger">
                    <Blazicon Svg="Lucide.Trash"/>
                </button>
            </tr>
        }
    }
</table>

@code {
    private Record[]? records;
    private class Record
    {
        public string? Target {get; set;}
        public string? Location {get; set;}
    }

    private async Task<Record[]> fetchData()
    {
        try
        {
            var client = ClientFactory.CreateClient();
            var option = new JsonSerializerOptions
            {
                PropertyNameCaseInsensitive = true
            };
            var data = await client.GetFromJsonAsync<Record[]>("http://localhost:8000/manage/urls");
            if (data == null)
            {
                return [];
            }
            return data;
        }
        catch
        {
            return [];
        }
    }

    protected override async Task OnInitializedAsync()
    {
        records = await fetchData();
    }
}