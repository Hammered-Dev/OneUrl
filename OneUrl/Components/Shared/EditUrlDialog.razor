@implements IDialogContentComponent<UrlRecord>;

@using Microsoft.FluentUI.AspNetCore.Components
@using OneUrl.Models

<FluentTextField @bind-Value="Content.Target" Label="Target" Style="width: 100%" Required />
<FluentTextField @bind-Value="Content.Location" Label="Location" Style="width: 100%" Required />

@code {
    [Parameter]
    public UrlRecord Content { get; set; } = default!;

    [CascadingParameter]
    public FluentDialog? Dialog { get; set; }
}