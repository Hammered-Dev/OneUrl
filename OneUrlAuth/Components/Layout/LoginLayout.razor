@inherits LayoutComponentBase
@using Microsoft.FluentUI.AspNetCore.Components

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider Style="margin: 1rem" />
<FluentMenuProvider />

<FluentLayout>
    <FluentBodyContent style="padding: 1rem;">
        <FluentStack Orientation="Orientation.Vertical" Width="100%" HorizontalAlignment="HorizontalAlignment.Center">
            <img src="brand.svg" height="96px" width="auto" />
            <FluentCard Width="400px">
                @Body
            </FluentCard>
        </FluentStack>
    </FluentBodyContent>
</FluentLayout>